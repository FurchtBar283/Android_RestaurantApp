<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.michael.therestaurantapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CarteActivity"
            android:label="@string/title_activity_carte"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrinksActivity"
            android:label="@string/title_activity_drinks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DessertActivity"
            android:label="@string/title_activity_dessert"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainCourseActivity"
            android:label="@string/title_activity_main_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AppetizerActivity"
            android:label="@string/title_activity_appetizer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CurrentOrderActivity"
            android:label="@string/title_activity_current_order"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
